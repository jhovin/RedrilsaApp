<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diamante"
    android:padding="20dp"
    tools:context=".MainActivity">



    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv1"
            android:src="@drawable/remicsa"
            android:layout_width="match_parent"
            android:onClick="IrPagina"
            android:layout_height="100dp">

        </ImageView>

        <View
            android:layout_below="@id/iv1"
            android:id="@+id/center_view"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lima"
            android:onClick="IrFormulario"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:background="@drawable/shape3"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_alignEnd="@id/center_view"
            android:layout_below="@id/iv1"></TextView>

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/iv2"
            android:background="@drawable/oficina"
            android:layout_width="match_parent"
            android:layout_below="@id/tv1"
            android:onClick="IrFormulario"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@id/center_view">

        </ImageView>

        <TextView
            android:id="@+id/tv2"
            android:layout_margin="20dp"
            android:background="@drawable/shape3"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Proyectos"
            android:onClick="irProyectos"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_alignLeft="@id/center_view"
            android:layout_below="@id/iv1"></TextView>

        <ImageView
            android:id="@+id/iv3"
            android:background="@drawable/diamantina"
            android:layout_width="match_parent"
            android:layout_below="@id/tv2"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/center_view"
            android:layout_alignEnd="@id/center_view">

        </ImageView>


    </RelativeLayout>

</RelativeLayout>